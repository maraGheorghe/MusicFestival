<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.BuyTicketController">
   <children>
      <Label layoutX="109.0" layoutY="51.0" text="Buy Ticket" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
         <textFill>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop>
                     <color>
                        <Color red="0.49803921580314636" green="0.5647059082984924" blue="0.8666666746139526" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="0.3294117748737335" green="0.25882354378700256" blue="0.8392156958580017" />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </textFill>
      </Label>
      <TextField fx:id="nameField" layoutX="89.0" layoutY="136.0" promptText="name">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <TextField fx:id="numberField" layoutX="89.0" layoutY="200.0" promptText="number of tickets">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <Button fx:id="buyButton" layoutX="144.0" layoutY="315.0" mnemonicParsing="false" onAction="#handleBuyButton" prefHeight="30.0" prefWidth="63.0" style="-fx-background-color: linear-gradient(to bottom, #7f90dd  , #5442d6);" text="Buy!" textAlignment="CENTER" textFill="#f5f5f5">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Label fx:id="errorLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="45.0" layoutY="242.0" prefHeight="65.0" prefWidth="258.0" text="errors" textAlignment="CENTER" textFill="#b90303" visible="false" wrapText="true">
         <font>
            <Font name="System Italic" size="13.0" />
         </font>
      </Label>
      <Label fx:id="successLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="59.0" layoutY="251.0" prefHeight="46.0" prefWidth="230.0" text="Successfully saved!" textAlignment="CENTER" textFill="#16b804" visible="false">
         <font>
            <Font name="System Bold Italic" size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
