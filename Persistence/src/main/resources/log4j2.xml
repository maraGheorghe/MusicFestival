<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="error">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="Date: %d{DATE} Level: %-5level Class: %class{36} Line: %L Message: %M - %msg%n"/>
        </Console>
        <File name="log" fileName="target/logFile.log" append="true">
            <PatternLayout pattern="Date: %d{DATE} Level: %-5level Class: %class{36} Line: %L Message: %M - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="log"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>